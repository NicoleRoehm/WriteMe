<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bild2">

        <androidx.cardview.widget.CardView
            android:id="@+id/detail_click_card"
            android:layout_width="409dp"
            android:layout_height="99dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#A6D684DF"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="74dp"
                android:layout_height="72dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/home_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#076671"
                app:layout_constraintStart_toStartOf="@id/home_image"
                tools:text="Harald" />

            <View
                android:id="@+id/view"
                android:layout_width="413dp"
                android:layout_height="5dp"
                android:layout_marginTop="95dp"
                android:background="#275E98" />

            <TextView
                android:id="@+id/home_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-black"
                tools:text="hello whats up" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>